%p#notice= notice
%h1 Users
%table
  %thead
    %tr
      %th Name
      %th Nickname
      %th Date birth
      %th City
      %th State
      %th Sex
      %th Age
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.nickname
        %td= user.date_birth
        %td= user.city
        %td= user.state
        %td= user.sex
        %td= user.age
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_user_path
