= form_for(user) do |f|
  - if user.errors.any?
    #error_explanation
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :date_birth
    = f.date_select :date_birth, start_year: 1930
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :sex, "Sexo"
    = f.select :sex, User.sexes.keys
  -#.field
  -#  = f.label :age
  -#  = f.number_field :age
  .actions
    = f.submit
